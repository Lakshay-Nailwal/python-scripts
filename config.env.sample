# Database Configuration
DB_HOST=your-database-host.amazonaws.com
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_PORT=3306

# Kafka Configuration - Default/Fallback
BOOTSTRAP_SERVERS="your.kafka.broker:9092,your.kafka.broker:9092,your.kafka.broker:9092"

# Environment-specific Kafka Brokers
KAFKA_QA2_BROKER=kafka.scm.gomercury.in:9092
KAFKA_STAGING_BROKER=kafka.scm.gomercury.in:9092
KAFKA_PROD_BROKER=kafka.scm.gomercury.in:9092

# Database Names
MERCURY_DB=mercury
PARTNER_DB=partner

# CSV Output Configuration
CSV_OUTPUT_DIR=/path/to/your/csv/output/directory

